@model MvcContractorShareApplication.Models.ResetPasswordModel
@{
    ViewBag.Title = "Reset Password";
}

    @Html.Partial("_NavBar")


<div class="container">

@using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                
                //Show Validation Summary if there's any error
                if (ViewData.ModelState.Any(x => x.Value.Errors.Any())) 
                { 
                   <div  class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                      @Html.ValidationSummary(true)
                   </div>
                }
    
                <div class="row">
                    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		                <form role="form">
                            <fieldset>
                                <h2><small>Reset Password</small></h2>
                                <hr class="colorgraph">

                                <div class="col-xs-8 col-sm-9 col-md-9">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control",  @placeholder = "Email address"})
                                    @Html.ValidationMessageFor(m => m.UserName,String.Empty , new { @class = "help-inline", @style="color:red" })
                                     </div>
                                    
                                    <div class="col-xs-8 col-sm-9 col-md-9">
                                        <br />
                                        When clicking Retrieve Password we will send you an email with a temporal password that will expire in 24 hours
                                    </div>

                                <hr class="colorgraph">
                                <div class="row">
                                    <div class="col-xs-8 col-sm-5 col-md-5">
                                        <br />
                                        <input type="submit" value="Retrieve Password" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                                </div>
                            </fieldset>
		                </form>
	                </div>
                </div>
}
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
