@model MvcContractorShareApplication.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}


    @Html.Partial("_NavBar")


<div class="container">

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {                
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, " ", new { @class = "help-inline", @style="color:red" })

                <div class="row">
                    <div class="col-xs-12 col-sm-4 col-md-4 col-sm-offset-2 col-md-offset-3">
		                <form role="form">
                            <fieldset>
                                <h2><small>Login</small></h2>
                                <hr class="colorgraph">

                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control",  @placeholder = "Email address"})
                                    @Html.ValidationMessageFor(m => m.UserName,String.Empty , new { @class = "help-inline", @style="color:red" })
                                </div>

                               <div class="form-group">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                            @Html.ValidationMessageFor(m => m.Password,String.Empty , new { @class = "help-inline", @style="color:red" })
                                </div>
                                <div class="row">
                                    <div class="col-xs-2 col-sm-2 col-md-2">
                                    </div>
                                    <div class="col-xs-10 col-sm-10 col-md-10">
                                        Click <a href="/Home/RegisterMain">Register </a> if you don't have an account.

                                    </div>
                                </div>
                                <hr class="colorgraph">
                                    <input type="submit" value="Log in" class="btn btn-primary btn-block btn-lg" tabindex="7">

                                <div class="col-xs-10 col-sm-10 col-md-10">
                                         <a href="/Account/ResetPassword">Forgot Password? </a>

                                    </div>

                            </fieldset>
		                </form>
	                </div>
                </div>
}
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
