@model MvcContractorShareApplication.Models.CancelAppointmentModel

@{
    ViewBag.Title = "CancelAppointment";
}

    @Html.Partial("_NavBar")

@section featured {

<div class="jumbotron jumbotron-special-short">
        <div class="container" >
            <h2  id="testolga" style="font-family:Calibri; font-size:24px; font-weight:bold">Cancel Appointment</h2>
    </div>
    }
    <br />

   

    <div class="container">

    <div class="row">
  		<div class="col-sm-3"><!--left col-->
              
        <br />
           <ul class="list-group">
            <li class="list-group-item text-right"><span class="pull-left"><strong>Client</strong></span> @Html.DisplayFor(model => model.ClientName)</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Contractor </strong></span> @Html.DisplayFor(model => model.ContractorName)</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Meeting Time </strong></span> @Html.DisplayFor(model => model.MeetingTime)</li>
           <li class="list-group-item text-right"><span class="pull-left"><strong>Location</strong></span> 
                @Html.DisplayFor(model => model.Address) <br />
                @Html.DisplayFor(model => model.City) <br />
            </li>
          </ul> 

        </div><!--/col-3-->
    	<div class="col-sm-9">
          
          
          <div class="tab-content">
            <div class="tab-pane active" id="home">
                <hr>
                <div class="row">
                     <div class="col-sm-10"><h4>Appointment for @Html.DisplayFor(model => model.JobName)</h4></div>
                     <div class="col-sm-10"><h5><b>Are you sure you want to cancel this appointment?</b></h5>
                         <br />
                         If you finally cannot make it, please cancel this appointment.
                         <br />
                         <br />
                        @using (Html.BeginForm()) {
                        @Html.AntiForgeryToken()
                              <!--  Hidden field -->
                             @Html.HiddenFor(m => m.AppointmentId, new { @class = "form-control" })
                        <p>
                            <div class="row">
                                    <div class="col-xs-7 col-md-5">
                                        <input type="submit" value="Yes, Cancel this Appointment" class="btn btn-primary btn-block btn-default" tabindex="7">
                                    </div>
                             </div>
                        </p>
                        }
                </div>

                  	<ul class="pagination" id="myPager"></ul>
              </div><!--/table-resp-->
              
              <hr>
              
             
             
              </div><!--/tab-pane-->
          </div><!--/tab-content-->

        </div><!--/col-9-->
    </div><!--/row-->