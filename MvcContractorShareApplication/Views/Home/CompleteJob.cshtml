@model MvcContractorShareApplication.Models.CompleteJobModel

@{
    ViewBag.Title = "CompleteJob";
}

    @Html.Partial("_NavBar")

@section featured {

<div class="jumbotron jumbotron-special-short">
        <div class="container" >
            <h2  id="testolga" style="font-family:Calibri; font-size:24px; font-weight:bold">Complete Job</h2>
    </div>
    }
    <br />

   

    <div class="container">

    <div class="row">
  		<div class="col-sm-3"><!--left col-->
              
        <br />
          <ul class="list-group">
            <li class="list-group-item text-right"><span class="pull-left"><strong>Status</strong></span> @Html.DisplayFor(model => model.StatusName)</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Category</strong></span> @Html.DisplayFor(model => model.CategoryName)</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Posted</strong></span>@Html.DisplayFor(model => model.Posted)</li>

            <li class="list-group-item text-right"><span class="pull-left"><strong>Location</strong></span> 
                @Html.DisplayFor(model => model.Address) <br />
                @Html.DisplayFor(model => model.PostalCode) <br />
                @Html.DisplayFor(model => model.City) <br />
                @Html.DisplayFor(model => model.Country)
            </li>
          </ul> 

        </div><!--/col-3-->
    	<div class="col-sm-9">
          
          
          <div class="tab-content">
            <div class="tab-pane active" id="home">
                <hr>
                <div class="row">
                     <div class="col-sm-10"><h4>@Html.DisplayFor(model => model.JobName)</h4></div>
                     <div class="col-sm-10"><h5><b>Have you completed this job?</b></h5>
                         <br />
                         Once a job has been completed the client will receive your bill.
                         <br />
                         The job will be closed.
                         <br />
                         <br />
                        @using (Html.BeginForm()) {
                        @Html.AntiForgeryToken()
                              <!--  Hidden field -->
                             @Html.HiddenFor(m => m.JobId, new { @class = "form-control" })
                        <p>
                            <div class="row">
                                    <div class="col-xs-5 col-md-4">
                                        <input type="submit" value="Yes, Complete this job" class="btn btn-primary btn-block btn-default" tabindex="7">
                                    </div>
                             </div>
                        </p>
                        }
                </div>

                  	<ul class="pagination" id="myPager"></ul>
              </div><!--/table-resp-->
              
              <hr>
              
             
             
              </div><!--/tab-pane-->
          </div><!--/tab-content-->

        </div><!--/col-9-->
    </div><!--/row-->