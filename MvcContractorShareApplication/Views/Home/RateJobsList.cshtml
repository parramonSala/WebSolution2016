@model IEnumerable<MvcContractorShareApplication.Models.JobRate>

@{
    ViewBag.Title = "RateJobsList";
}
@Html.Partial("_NavBar")

@section featured {
    <div class="jumbotron jumbotron-special-short">
            <div class="container" >
                <h2  id="testolga" style="font-family:Calibri; font-size:24px; font-weight:bold">Rate your completed jobs</h2>
                <br />
                <h5>The rest of clients would love to hear your feedback! Please share your experience and rate the professional</h5>
             </div>
}

    <br />

  <table class="table table-striped" id="jobratetable">

    @foreach (var item in Model) {
    
        <tr>
            <td width="20%"><b>
                <img class="img-circle user-image" src="../images/userprofile.png"  style="width:25%" >
                <br />
                <b>
                    @Html.ActionLink(item.ContractorName, "ContractorProfile", "User", new { Id = item.ContractorID }, null /* html attributes */)
                </b>
            </td>
            <td width="15%">
                @Html.ActionLink(item.JobName, "DetailsJob", "Home", new { Id = item.JobId }, null /* html attributes */)
            </td>
            <td width="15%">
                @Html.DisplayFor(modelItem => item.JobCategoryName)
            </td>
            <td width="10%">
                @Html.DisplayFor(modelItem => item.AppointmentDate)
            </td>
            <td width="10%">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td width="15%">
                @for(var i=0; i<5; i++){ 
                        if(i<item.AverageRate){ 
                            <a href="#">
                                <span class="fa fa-star"></span>
                            </a>
                         } 
                         else { 
                            <a href="#">
                                <span class="fa fa-star-o"></span>
                            </a> 
                         } 
                     }
            </td>
            <td width="10%">
                <a href="ui-elements.html#"> @Html.ActionLink("Rate", "AddRate","User", new { id=item.JobId },new { @class = "btn btn-primary btn-large"})</a>
            </td>
        </tr>
    
    }

</table>