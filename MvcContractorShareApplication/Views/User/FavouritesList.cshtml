@model IEnumerable<MvcContractorShareApplication.Models.Contractor>

@{
    ViewBag.Title = "FavouritesList";
}

@Html.Partial("_NavBar")

@section featured {
    <div class="jumbotron jumbotron-special-short">
            <div class="container" >
                <h2  id="testolga" style="font-family:Calibri; font-size:24px; font-weight:bold">My Favourites</h2>
             </div>
}

    <br />

  <table class="table table-striped" id="jobratetable">

    @foreach (var item in Model) {
    
        <tr>
            <td width="20%"><b>
                <img class="img-circle user-image" src="../images/userprofile.png"  style="width:25%" >
                <br />
                <b>
                    @Html.ActionLink(item.CompanyName, "ContractorProfile", "User", new { Id = item.userId }, null /* html attributes */)
                </b>
            </td>
             <td width="25%">
                @Html.DisplayFor(modelItem => item.CategoriesList)
            </td>

            <td width="25%">
                @Html.DisplayFor(modelItem => item.Address)
                <br />
                @Html.DisplayFor(modelItem => item.PostalCode)
                <br />
                @Html.DisplayFor(modelItem => item.City)
            </td>

            <td width="10%">
                @Html.DisplayFor(modelItem => item.PricePerHour) 
            </td>

            <td width="15%">
                @for(var i=0; i<5; i++){ 
                    if(i<item.AverageRate){ 
                        <a href="#">
                            <span class="fa fa-star"></span>
                        </a>
                     } 
                     else { 
                        <a href="#">
                            <span class="fa fa-star-o"></span>
                        </a> 
                     } 
                 }
            </td>
        </tr>
    
    }

</table>